<%- include("header") -%>
<body>
    <div id="heading" class="box">
        <h1> <%= listTitle %></h1>
    </div>
    <div class="box">
        <% newListItems.forEach(function(item){ %>
            <form action = "/delete" method = "post">
                <div class="item">
                    <!-- onChange permite hacer el submit sin agregar un botÃ³n -->
                    <!-- en value defino el id del item por el que estoy loopeando, para poder indexar en app.js -->
                    <input type="checkbox" name="checkbox" value="<%= item._id%>" onChange="this.form.submit()">
                    <p><%= item.name %></p> 
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }) %>

        <form class="item" action = "/" method = "POST">
            <input type="text" name="newItem" placeholder="newItem" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
</body>
<%- include("footer"); -%>

